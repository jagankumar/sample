<%= form_for([@activity]) do |f| %>
 
  
   <div class="field">
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  <%= link_to "back" , @activity%>
<% end %>